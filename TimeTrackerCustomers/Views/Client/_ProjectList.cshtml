@model IEnumerable<DBL.Entities.Project>
@{

}
@foreach (var project in Model)
{
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-sm-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mt-5">
                    <div class="lesson_name">
                        <div class="project-block light-info-bg">
                            <i class="icofont-paint"></i>
                        </div>
                        <span class="fs-5 project_name fw-bold">@project.ProjectName</span>
                    </div>
                </div>
                <div class="dividers-block"></div>
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0 fw-bold fs-6 mb-2">@project.CategoryName</h6>
                </div>
                <div class="row g-2 pt-4">
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="icofont-clock-time"></i>
                            <span class="ms-2">Start - @project.ProjStartDate.ToString("dd MMM, yyyy")</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="icofont-sand-clock"></i>
                            <span class="ms-2">End - @project.ProjEndDate.ToString("dd MMM, yyyy")</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="icofont-group-students "></i>
                            <span class="ms-2">@project.Members Members</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="icofont-money"></i>
                            <span class="ms-2">@project.CCYName</span>
                        </div>
                    </div>
                </div>
                <div class="dividers-block"></div>
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h4 class="small fw-bold mb-0">Progress</h4>
                    <a asp-action="ProjectManage" asp-controller="Client" asp-route-projectCode="@project.ProjectCode" class="btn btn-outline-secondary"><i class="icofont-edit text-success"></i> Manage Project</a>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-secondary" role="progressbar" style="width: 25%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar bg-secondary ms-1" role="progressbar" style="width: 25%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar bg-secondary ms-1" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
}
