@model IEnumerable<screenshotdets> 
<div class="col-lg-12 col-md-12">
    @foreach (var hour in Model.AsEnumerable().GroupBy(x => new { x.TimeTaken.Hour,x.TimeTaken.Date}))
    {
        <div class="row pb-3 row-deck">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center bg-transparent border-bottom-0 py-3">
                        <div class="selectall-block">
                            <input class="form-check-input" type="checkbox" value="">
                            <label class="form-check-label">Select All </label>
                        </div>
                        <div class="report ms-3">
                            <input class="form-check-input" type="checkbox" value="">
                            <label class="form-check-label">Low activity screencasts</label>
                        </div>
                    </div>
                    <div class="card-body" id="aniimated-thumbnials">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="timezon-block py-3">
                                    <h4 class="h6 fw-bold mb-0 color-600">@hour.FirstOrDefault().TimeTaken.ToString("h:00 tt").ToUpper() - @hour.FirstOrDefault().TimeTaken.ToString("h:59 tt").ToUpper()</h4>
                                    <span class="text-muted">@hour.FirstOrDefault().TimeTaken.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                        <div class="row g-3 row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-6">
                            @foreach (var screenCast in hour)
                            {
                                <div class="col">
                                    <div class="screen-card  p-2 border">
                                        <a href="@String.Format("/ScreenCasts/{0}.png",@screenCast.ScrName)">
                                            <img class="img-fluid img-thumbnail" src="@String.Format("/ScreenCasts/{0}.png",@screenCast.ScrName)" alt="">
                                        </a>
                                        <div class="user-profile d-flex align-items-center mt-3">
                                            <img class="avatar rounded-circle" src="~/images/profile_av.svg" alt="profile">
                                            <div class="u-info ms-2">
                                                <span class="fw-bold">@screenCast.DeveloperName</span><br>
                                                <span class="fw-bold text-success">@screenCast.ProjName</span><br>
                                                @*<span class="text-muted">@screenCast.TimeTaken.ToString("hh:mm tt").ToUpper()</span>*@
                                            </div>
                                        </div>
                                        <div class="user-activity d-flex justify-content-between">
                                            <div class="keybord-block w-50 pe-1">
                                                <i class="icofont-ui-keyboard "></i>
                                                <div class="progress" style="height: 5px;">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>
                                            <div class="mouse-block w-50 ps-1 text-end">
                                                <i class="icofont-wireless-mouse "></i>
                                                <div class="progress" style="height: 5px;">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="64" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- row end -->
    }



</div>