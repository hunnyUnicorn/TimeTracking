                            <tr>
                                <th>Activity</th>
                                <th>Total Time</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Testing</td>
                                <td>4h</td>
                                <td>$ 20.00</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"><strong>Total</strong></td>
                                <td><strong>$ 20.00</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-md-8 text-center"><i>Terms and conditions apply</i></div>
            </div>
        </div>
    </page>
</div>
<div class="modal-footer">
    <a asp-action="InvoicePreview" asp-controller="Developer" target="_blank" class="btn btn-secondary print">Print</a>
    <button type="button" form="CreateProject" class="btn btn-primary">Send Via Email</button>
</div>
