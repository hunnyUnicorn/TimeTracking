    <page size="A4" id="invoice">
        <div class="container-fluid w-auto p-3 m-4 border border-secondary invoice-container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <h6 class="underline bold"><strong>INV000000000103</strong></h6>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-md-6 text-end">
                    <h5>Invoice Details</h5>
                    <p class="m-1">DEVELOPER : CHARLES TAITI</p>
                    <p class="m-1">INVOICE NO : INV000000000103</p>
                    <p class="m-1">DATE : @DateTime.Now.ToShortDateString()</p>
                </div>
            </div>
            <div class="row justify-content-start">
                <div class="col-md-6">
                    <h5>Client Details</h5>
                    <p class="m-1">TAIWAC SOLUTIONS</p>
                    <p class="m-1">Software Development</p>
                </div>
            </div>
            <div class="row justify-content-center">
