@model EmailVerification 
@{
    ViewData["Title"] = "EmailVerification";
    Layout = "~/Views/Shared/_LayoutUnAuth.cshtml";
}

<div class="body d-flex p-0 p-md-2 p-xl-5">
    <div class="row g-0 rounded-3 mt-2 mt-md-0 justify-content-center">
        <div class="col-lg-6 d-flex justify-content-center align-items-center auth-h100 bg-secondary py-2 py-md-0">
            <div class="d-flex flex-column p-2">
                <h1>Email Verification</h1>
                <span>Verify Email</span>
                <div class="tab-content mt-4 mb-3">
                    <div class="tab-pane fade active show" id="Email">
                        <div class="card">
                            <div class="card-body p-4">
                                <form asp-action="EmailVerification" asp-controller="Home" method="post">
                                    <input asp-for="userIdentifier" hidden>
                                    <div class="mb-3">
                                        <label class="form-label fs-6">Enter Verifcation Code</label>
                                        <input asp-for="VerifcationCode" class="form-control">
                                    </div>
                                    <button type="submit" class="btn btn-primary text-uppercase py-2 fs-5 w-100 mt-2">Verify Email</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <a asp-action="Login" asp-controller="Home" title="Sign Up" class="text-primary text-decoration-underline">Go To Login</a>
            </div>
        </div>

    </div>

</div>
